{
    # Use internal HTTPS port to match the container mapping
    https_port 443
}

{
    # Global option to prevent Caddy from trying to redirect HTTP to HTTPS
    auto_https off
}

http://matrix.resistance.chat {
    reverse_proxy synapse:8008 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
}

# Optional: If you want to support Federation on port 8448 directly
# (Though most modern setups use .well-known delegation instead)
matrix.resistance.chat:8448 {
    reverse_proxy localhost:8008
}

:80 {
    reverse_proxy synapse:8008
}

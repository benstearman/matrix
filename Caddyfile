{
    # Prevents Caddy from trying to issue its own SSL certs or redirect to HTTPS
    auto_https off
}

http://matrix.resistance.chat {
    # Points to the Synapse container on its internal port
    reverse_proxy synapse:8008 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
}

# Simple catch-all for local testing/tunneling
:80 {
    reverse_proxy synapse:8008
}